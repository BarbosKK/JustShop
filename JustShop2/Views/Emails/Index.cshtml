@model JustShop2.Models.Emails.EmailsViewModel

<div class="container mt-5">
    <h2>Saada e-kiri</h2>
    <form method="post" asp-action="SendEmail" asp-controller="Emails" enctype="multipart/form-data">
        <div class="form-group row">
            <label asp-for="To" class="col-sm-2 col-form-label">Saaja</label>
            <div class="col-sm-5">
                <input asp-for="To" class="form-control" required />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Subject" class="col-sm-2 col-form-label">Teema</label>
            <div class="col-sm-5">
                <input asp-for="Subject" class="form-control" required />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Body" class="col-sm-2 col-form-label">Sisu</label>
            <div class="col-sm-5">
                <textarea asp-for="Body" class="form-control" rows="5" required></textarea>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Manused</label>
            <div class="col-sm-5">
                <input type="file" name="Attachments" class="form-control" multiple />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-5 offset-sm-2">
                <button type="submit" class="btn btn-primary">Saada e-kiri</button>
            </div>
        </div>
    </form>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info mt-3">@ViewBag.Message</div>
    }
</div>
